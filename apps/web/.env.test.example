# Playwright E2E Test Environment Variables
# Copy this file to .env.test and fill in your test environment values

# Base URL for the application
# Default: http://localhost:5173 (Vite dev server)
PLAYWRIGHT_BASE_URL=http://localhost:5173

# Supabase Configuration
# Use a separate Supabase project for testing to avoid polluting production data
VITE_SUPABASE_URL=your-test-supabase-url
VITE_SUPABASE_ANON_KEY=your-test-supabase-anon-key

# Test User Credentials (optional - tests will generate random users)
# If you want to use specific test accounts, uncomment and set these:
# TEST_USER_EMAIL=test@bookshare-test.com
# TEST_USER_PASSWORD=TestPassword123!

# Browser Configuration
# Set to 'true' to run tests in headed mode by default
# HEADED=false

# Debugging
# Set to 'true' to enable additional debugging output
# DEBUG=false

# CI Configuration
# Set to 'true' when running in CI environment
# CI=false
